{
  "name": "PK Analysis Dev Environment w/ MLflow",
  "dockerComposeFile": [
      "../docker-compose.runtime.yml",
     // "../docker-compose.dev.yml" uncomment if working with local gemma 3
  ],
  
  "service": "dev", // The name of your development service in the compose file
  "workspaceFolder": "/workspaces/PK-Analysis", // Target folder inside the container

  // Installs PK-Analysis project dependencies into its own venv after container starts
  "postStartCommand": "cd /workspaces/PK-Analysis && poetry install",

  "customizations": {
      "vscode": {
          "extensions": [
              "ms-python.python",
              "ms-toolsai.jupyter",
              "ms-azuretools.vscode-docker",
              "ms-toolsai.datawrangler",
              "mhutchie.git-graph",
              "donjayamanne.githistory",
              "eamodio.gitlens",
              "charliermarsh.ruff",
              "vscode-icons-team.vscode-icons",
              "KevinRose.vsc-python-indent",
              "google.geminicodeassist",
              "tamasfe.even-better-toml",
              "njpwerner.autodocstring",
              "REditorSupport.r",
              "RDebugger.r-debugger",
              "julialang.language-julia",
              "0h7z.vscode-julia-format",
              "quarto.quarto"
          ],
          "settings": {
              // Let VS Code discover the Python interpreter from Poetry's venv
              "python.defaultInterpreterPath": "",
              "python.terminal.activateEnvironment": false, // Good with Poetry
              "terminal.integrated.defaultProfile.linux": "bash",
              "[python]": {
                  "editor.defaultFormatter": "charliermarsh.ruff"
              }
          }
      }
  },
  "remoteUser": "vscode", // Should match the user configured in your dev Dockerfile
  "shutdownAction": "stopCompose" // Stops all compose services on window close
}