{
    "name": "Python GPU Dev Container",
    // Reference your Dockerfile
    //"build": {
    //  "dockerfile": "dockerfile", // Or adjust path as needed
    //  "context": ".." // Or adjust build context path
    //},
    "image": "cuda-py:20250407104817", 
    // Add arguments to be passed to 'docker run'
    "runArgs": [
      "--gpus=all"
      // You can add other 'docker run' arguments here too, e.g.
      // "-e", "MY_ENV_VAR=some_value"
    ],
  
    // --- Other devcontainer configurations ---
  
    // Example: Specify VS Code extensions to install inside the container
    "customizations": {
      "vscode": {
        "extensions": [
          "ms-python.python",
          "ms-toolsai.jupyter",
          "ms-azuretools.vscode-docker", 
          "ms-toolsai.datawrangler", 
          "mhutchie.git-graph", 
          "donjayamanne.githistory", 
          "eamodio.gitlens", 
          "charliermarsh.ruff", 
          "vscode-icons-team.vscode-icons", 
          "KevinRose.vsc-python-indent", 
          "ggoogle.geminicodeassist", 
          "tamasfe.even-better-toml", 
          "njpwerner.autodocstring"

          // Add other extensions
        ],
          "settings": {
            // Settings to help VS Code find the interpreter correctly
            "python.defaultInterpreterPath": "", // OPTIONAL: You could try to find this path, but often auto-detect works
            "python.terminal.activateEnvironment": false // Good practice with Poetry
                }
      }
    },
  
    // Example: Run a command after the container is created
    // "postCreateCommand": "poetry install", // If you used poetry
  
    // Forward ports if needed
    // "forwardPorts": [8888],
  
    // Set the remote user (if your Dockerfile creates one)
    "remoteUser": "vscode" // Or whatever user you configured
  }